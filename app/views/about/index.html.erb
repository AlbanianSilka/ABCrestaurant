<!DOCTYPE html>
<head>
  <style>
    #map {
        width: 1300px;
        height: 700px;
    }
  </style>
</head>
<body>
<script>
  function initMap() {
      let abc_rest = {lat: 48.858057, lng: 2.288146};

      let map = new google.maps.Map(
          document.getElementById('map'), {zoom: 12, center: abc_rest}
      );

      let marker = new google.maps.Marker({position: abc_rest, map: map})

      google.maps.event.addListener(marker, 'click', function () {
          window.location.href = 'https://goo.gl/maps/s8Bu8oRFns1zSiGXA'
      })
  }
</script>
<script
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVz_MSburTLzuQ-kF4JVdslQTfnS20ZDw&callback=initMap&v=weekly"
  async
></script>
</body>
